
<div class="banner_new" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('lolly.jpg') %>)">
  <div class="banner-content">
    <%= simple_form_for(@space) do |f| %>
      <% if @space.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @space.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :price %>
      <%= f.input :description%>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "submit space", class: "btn btn-primary" %>
    <% end %>
 </div>
</div>
